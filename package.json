{
  "name": "mono",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "npm-run-all --serial clean build:styles build:js",
    "build:js": "lerna exec --parallel -- rollup -c ../../rollup.config.js",
    "build:styles": "npm-run-all --serial styles:preprocess styles:postcss styles:componentize",
    "clean": "lerna exec --parallel -- rimraf dist src/*.css src/*-css.js",
    "doc:custom-elements": "lerna exec --parallel -- wca analyze src --format json --outFile custom-elements.json",
    "doc:readme": "lerna exec --parallel -- wca analyze src --format markdown --outFile readme.md",
    "lint:js": "eslint packages/**/src/*.js packages/**/__tests__/*.js",
    "lint:styles": "stylelint packages/**/src/*.scss",
    "postinstall": "lerna bootstrap --hoist",
    "publish": "lerna publish",
    "semantic-release": "lerna exec --concurrency 1 -- semantic-release -e semantic-release-monorepo --dry-run",
    "styles:componentize": "sass-render ./packages/**/src/*.scss -t ./scripts/styles-template.js",
    "styles:postcss": "lerna exec --parallel -- node ../../scripts/postcss",
    "styles:preprocess": "node-sass ./packages/**/src --output ./packages/**/src",
    "test": "karma start karma.config.js --coverage",
    "test:watch": "karma start karma.config.js --auto-watch=true --single-run=false"
  },
  "//": [
    "\"scripts\": {",
    "  \"build\": \"npm run ciBuild\",",
    "  \"bundler\": \"webpack --mode=production\",",
    "  \"bundle:test\": \"webpack-dev-server\",",
    "  \"cssLint\": \"stylelint './src/*.css'\",",
    "  \"dev\": \"npm run sassBuild:watch\",",
    "  \"distJS\": \"copyfiles -u 1 -V './src/**/*.js' ./dist\",",
    "  \"sassRender\": \"sass-render src/*.css -t ./scripts/staticStyles-template.js\",",
    "  \"sweep\": \"rm -rf ./temp ./demo/css ./demo/fonts ./dist ./src/tokens | rm ./src/*.css ./src/*-css.js\",",
    "  \"esLint\": \"./node_modules/.bin/eslint src/auro-*.js\",",
    "  \"lint\": \"npm-run-all cssLint test:yaml esLint\",",
    "  \"test\": \"karma start --coverage\",",
    "  \"test:watch\": \"karma start --auto-watch=true --single-run=false\",",
    "  \"test:ci\": \"npm-run-all test lint\",",
    "  \"test:yaml\": \"yamllint .travis.yml\",",
    "  \"ciBuild\": \"npm-run-all sassBuild sassRender cssLint distJS bundler postinstall\",",
    "  \"sassBuild\": \"npm-run-all sassBuild:demo sassBuild:component postCss:component sassRender\",",
    "  \"sassBuild:dev\": \"npm-run-all sassBuild:demo sassBuild:component postCss:component sassRender\",",
    "  \"sassBuild:demo\": \"node-sass ./demo/sass/ --output ./demo/css/\",",
    "  \"sassBuild:component\": \"node-sass ./src/ --output ./src/\",",
    "  \"sassBuild:watch\": \"nodemon -e scss --watch src --exec npm run sassBuild:dev\",",
    "  \"postCss:component\": \"node ./scripts/postCss.js\",",
    "  \"serve\": \"polymer serve --port 3002 --hostname 0.0.0.0\"",
    "},"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@open-wc/building-rollup": "^1.9.0",
    "@open-wc/testing": "^2.5.21",
    "@open-wc/testing-karma": "^4.0.3",
    "autoprefixer": "^9.8.6",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.2",
    "eslint": "^7.8.1",
    "eslint-plugin-lit": "^1.2.2",
    "karma": "^5.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-junit-reporter": "^2.0.1",
    "lerna": "^3.22.1",
    "lerna-wizard": "^1.1.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.32",
    "postcss-custom-properties": "^9.1.1",
    "postcss-discard-comments": "^4.0.2",
    "postcss-remove-rules": "^1.0.0",
    "semantic-release": "^17.1.1",
    "semantic-release-monorepo": "^7.0.2",
    "stylelint": "^13.7.1",
    "stylelint-config-standard": "^20.0.0",
    "wc-sass-render": "^1.2.3",
    "web-component-analyzer": "^1.1.6"
  },
  "browserslist": [
    "last 4 version",
    "> 1%",
    "IE 11"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all test lint bundler postinstall",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {}
}
